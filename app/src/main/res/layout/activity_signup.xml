<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon"/>
    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:padding="20dp"
        android:layout_below="@+id/icon"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/purple_500"
        />
    <TextView
        android:id="@+id/fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name :"
        android:textColor="@color/black"
        android:layout_below="@+id/h1"
        android:textSize="20sp"
        android:padding="10dp"

        />
    <EditText
        android:id="@+id/fn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/h1"
        android:layout_toRightOf="@+id/fn"/>

    <TextView
        android:id="@+id/phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number :"
        android:textColor="@color/black"
        android:layout_below="@+id/fn"
        android:textSize="20sp"
        android:padding="10dp"

        />
    <EditText
        android:id="@+id/phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/fn"
        android:layout_toRightOf="@+id/phone1"/>

    <TextView
        android:id="@+id/blood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group :"
        android:textColor="@color/black"
        android:layout_below="@+id/phone1"
        android:textSize="20sp"
        android:padding="10dp"

        />
    <EditText
        android:id="@+id/blood2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/phone1"
        android:layout_toRightOf="@+id/blood1"/>

    <TextView
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_below="@+id/blood1"/>
    <EditText
        android:id="@+id/e2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/blood1"
        android:layout_toRightOf="@+id/e1"/>

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@color/black"
        android:layout_below="@id/e1"
        android:padding="10dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/e1"
        android:layout_toRightOf="@+id/p1"/>

    <TextView
        android:id="@+id/cp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textColor="@color/black"
        android:layout_below="@id/p1"
        android:padding="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/cp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/p1"
        android:layout_toRightOf="@+id/cp1"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cp2"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sign up" />



</RelativeLayout>